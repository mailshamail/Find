<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <org.osmdroid.views.MapView
            android:id="@+id/map"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myLocation2"
            android:src="@drawable/osm_ic_center_map"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="#00ffffff"
            android:contentDescription="@string/app_name"
            android:cropToPadding="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/followme"
            android:src="@drawable/osm_ic_follow_me"
            android:background="#00ffffff"
            android:contentDescription="@string/app_name"
            android:cropToPadding="true"
            android:layout_below="@+id/myLocation2"
            android:layout_alignLeft="@+id/myLocation2"
            android:layout_alignStart="@+id/myLocation2"
            android:layout_marginTop="10dp" />

        <ImageButton
            android:id="@+id/updateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/followme"
            android:layout_alignStart="@+id/followme"
            android:layout_below="@+id/followme"
            android:layout_marginTop="10dp"
            android:background="#00ffffff"
            android:contentDescription="@string/app_name"
            android:cropToPadding="true"
            android:src="@mipmap/update_button" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>